<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_play"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.admin.fingertwister.PlayActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Zurück"
        android:id="@+id/zurueck"
        android:textSize="20dp"
        android:onClick="onClickBack"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/aktuelleFarbe"
        android:textSize="20dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/aktuellerFinger"
        android:textSize="20dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Anzahl der Züge:"
        android:id="@+id/anzahlZuege"
        android:textSize="20dp"
        android:layout_marginTop="34dp"
        android:layout_below="@+id/aktuellerFinger"
        android:layout_alignParentLeft="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spielStarten"
        android:text="Spiel starten"
        android:textSize="20dp"
        android:onClick="onClickNext"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/zurueck"
        android:layout_below="@id/anzahlZuege"
        android:layout_centerVertical="true" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/zuganzahlText"
            android:layout_toStartOf="@+id/zuganzahlText"
            android:layout_above="@+id/zurueck"
            android:layout_below="@+id/zuganzahlText"
            android:id="@+id/linearLayout1">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/gruen1"
                android:src="@drawable/gruen" />

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/gruen2"
                android:src="@drawable/gruen" />

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/gruen3"
                android:src="@drawable/gruen" />

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/gruen4"
                android:src="@drawable/gruen" />

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/gruen5"
                android:src="@drawable/gruen" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/linearLayout1"
            android:layout_toLeftOf="@+id/startButton"
            android:layout_toStartOf="@+id/startButton"
            android:layout_above="@+id/zurueck"
            android:layout_below="@+id/zuganzahlText"
            android:id="@+id/linearLayout2">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/gelb1"
                android:src="@drawable/gelb" />

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/gelb2"
                android:src="@drawable/gelb" />

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/gelb3"
                android:src="@drawable/gelb" />

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/gelb4"
                android:src="@drawable/gelb" />

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/gelb5"
                android:src="@drawable/gelb" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/linearLayout2"
            android:layout_toLeftOf="@+id/linearLayout4"
            android:layout_above="@+id/startButton"
            android:layout_below="@+id/zuganzahlText"
            android:id="@+id/linearLayout3">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/blau1"
                android:src="@drawable/blau" />

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/blau2"
                android:src="@drawable/blau" />

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/blau3"
                android:src="@drawable/blau" />

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/blau4"
                android:src="@drawable/blau" />

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/blau5"
                android:src="@drawable/blau" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@+id/zuganzahlText"
            android:layout_toEndOf="@+id/zuganzahlText"
            android:layout_above="@+id/startButton"
            android:layout_below="@+id/zuganzahlText"
            android:id="@+id/linearLayout4">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/rot1"
                android:src="@drawable/rot" />

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/rot2"
                android:src="@drawable/rot" />

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/rot3"
                android:src="@drawable/rot" />

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/rot4"
                android:src="@drawable/rot" />

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/rot5"
                android:src="@drawable/rot" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
